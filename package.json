{
  "name": "ai-tracker",
  "version": "1.0.0",
  "description": "AI Tracker Desktop â€” local-only, privacy-first activity tracking with AI insights",
  "main": "dist/main/index.js",
  "author": "AI Tracker Team",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev:main\" \"npm run dev:renderer\"",
    "dev:main": "tsc -p tsconfig.main.json && electron .",
    "dev:renderer": "vite --config vite.config.ts",
    "build": "tsc -p tsconfig.main.json && vite build --config vite.config.ts",
    "dist": "npm run build && electron-builder --win",
    "postinstall": "electron-builder install-app-deps",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src/ --ext .ts,.tsx",
    "format": "prettier --write \"src/**/*.{ts,tsx,css}\"",
    "typecheck": "tsc --noEmit -p tsconfig.main.json"
  },
  "dependencies": {
    "better-sqlite3": "^11.8.0",
    "chokidar": "^4.0.0",
    "cors": "^2.8.5",
    "express": "^4.21.0",
    "grammy": "^1.40.0",
    "gray-matter": "^4.0.3",
    "node-cron": "^3.0.3"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.12",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/node": "^22.10.0",
    "@types/node-cron": "^3.0.11",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@types/supertest": "^6.0.2",
    "@vitejs/plugin-react": "^4.3.0",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.0",
    "electron": "^34.0.0",
    "electron-builder": "^25.1.0",
    "eslint": "^9.15.0",
    "postcss": "^8.4.49",
    "prettier": "^3.4.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-router-dom": "^7.1.0",
    "supertest": "^7.0.0",
    "tailwindcss": "^3.4.15",
    "typescript": "^5.7.0",
    "vite": "^6.0.0",
    "vitest": "^2.1.0"
  },
  "build": {
    "extends": "electron-builder.yml"
  }
}
